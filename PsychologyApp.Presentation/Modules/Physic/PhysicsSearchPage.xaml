<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileHelperMaui.Views.PhysicsPages.PhysicsSerchPage"
             xmlns:vm="clr-namespace:MobileHelper.ViewModels.PhysicsViewModels"
             xmlns:templates="clr-namespace:PsychologyApp.Presentation.Templates"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Title="Психосоматик">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:PhysicsSearchViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Найти" Clicked="Button_Clicked"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout 
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        
    <StackLayout 
        AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
        AbsoluteLayout.LayoutFlags="All"
        IsVisible="True"
        Margin="10, 0, 10, 0"
        VerticalOptions="FillAndExpand" 
        HorizontalOptions="FillAndExpand">

            <templates:NavigationBarSimpleView
            TitleText="Психосоматика"
            BackCommand="{Binding Finish}"/>

            <templates:TextEntryView
            PlaceholderText="Болезнь"
            BodyText="{Binding SearchText}"
            TitleText="Проблема"/>

            <ScrollView
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Never">

                <StackLayout>

                    <CollectionView
                        IsVisible="{Binding IsDone}"
                SelectionMode="None"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                VerticalScrollBarVisibility="Never"
                ItemsSource="{Binding ResultsObservableCollection}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10">
                                    <StackLayout Margin="5, 0, 5, 0">
                                        <Label 
                                            Text="{Binding Title}"
                                            FontSize="14"
                                            FontFamily="RobotoMedium"
                                            TextColor="#DE000000"
                                            Padding="0"
                                            HorizontalOptions="Start" />

                                        <Label
                                            Margin="0, 5, 0, 0"
                                            FontSize="14"
                                            HorizontalTextAlignment="Justify"
                                            TextColor="#DE000000"
                                            Text="{Binding Subtitle}"/>

                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>

                            <StackLayout
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand">

                                <Label
                                    FontFamily="RobotoMedium"
                                    TextColor="#DE000000"
                                    FontSize="14"
                                    Text="Введите запрос"/>

                                <Label
                                    FontFamily="RobotoRegular"
                                    TextColor="#DE000000"
                                    FontSize="14"
                                    Text="Болезнь или часть тела"/>

                            </StackLayout>

                        </CollectionView.EmptyView>

                    </CollectionView>

                    <templates:ProgressbarView 
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding IsInit}"
                        IsLoading="{Binding IsInit}"
                        ProgressText="Поиск причин">
                        <templates:ProgressbarView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Cancel}"/>
                        </templates:ProgressbarView.GestureRecognizers>
                    </templates:ProgressbarView>

                </StackLayout>

        </ScrollView>
    </StackLayout>
    </AbsoluteLayout>
</ContentPage>