<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsychologyApp.Presentation.Views.TestPages.StandardTestPage"
             xmlns:templates="clr-namespace:PsychologyApp.Presentation.Templates"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:vm="clr-namespace:PsychologyApp.Presentation.Modules.Tester.Standard"
             x:DataType="vm:StandardTestViewModel"
             Title="Стандартный тест">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout VerticalOptions="FillAndExpand">

        <StackLayout
            Margin="0, 15, 0, 15"
            Orientation="Horizontal">

            <Label
                Margin="20, 0, 0, 0"
                VerticalOptions="CenterAndExpand"
                FontSize="21"
                Text="{mi:Material Icon=KeyboardArrowLeft}"
                TextColor="{StaticResource Primary}">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Finish}"/>
                </Label.GestureRecognizers>

            </Label>

            <Label
                Text="Стандартный тест"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                FontFamily="RobotoSemiBold"
                TextColor="#DE000000"
                FontSize="17"/>

        </StackLayout>

        <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
            <StackLayout>
                <StackLayout IsVisible="{Binding IsStart}">
                    <StackLayout Margin="15, 25, 15, 0">

                        <Label
                            HorizontalTextAlignment="Center"
                            Margin="15, 0, 0, 10"
                            Text="Выбирайте цвета в приятной вам последовательности"
                            FontFamily="RobotoMedium"
                            TextColor="#DE000000"
                            FontSize="16"/>

                    </StackLayout>

                    <StackLayout Margin="0, 5, 0, 15">

                        <BoxView 
                    Margin="30, 0, 30, 5"
                    HeightRequest="3"
                    Color="{StaticResource Primary}"/>

                        <FlexLayout JustifyContent="Center">

                            <BoxView 
                        IsVisible="{Binding IsRed}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="1"
                        Grid.Row="0"
                        Color="Red"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding RedHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                            <BoxView
                        IsVisible="{Binding IsBrown}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="2"
                        Grid.Row="1"
                        Color="Brown"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BrownHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                            <BoxView 
                        IsVisible="{Binding IsYellow}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="1"
                        Grid.Row="1"
                        Color="Yellow"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding YellowHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                        </FlexLayout>

                        <FlexLayout Margin="10, 0, 10, 0" JustifyContent="Center">

                            <BoxView 
                        IsVisible="{Binding IsGreen}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Color="Green"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GreenHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                            <BoxView 
                        IsVisible="{Binding IsBlue}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="2"
                        Grid.Row="0"
                        Color="Blue"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BlueHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                            <BoxView
                        IsVisible="{Binding IsPurple}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="0"
                        Grid.Row="1"
                        Color="Purple"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PurpleHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                        </FlexLayout>

                        <FlexLayout JustifyContent="Center">

                            <BoxView 
                        IsVisible="{Binding IsGray}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Color="Gray"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GrayHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                            <BoxView
                        IsVisible="{Binding IsBlack}"
                        Margin="10"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="15"
                        Grid.Column="0"
                        Grid.Row="1"
                        Color="Black"
                        Opacity="0.9">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BlackHandler}"/>
                                </BoxView.GestureRecognizers>
                            </BoxView>

                        </FlexLayout>

                        <BoxView 
                        Margin="30, 10, 30, 0"
                        HeightRequest="3"
                        Color="{StaticResource Primary}"/>

                    </StackLayout>

                    <templates:TextBoxView
                        Margin="0, -10, 0, 0"
                        HeaderText="Подробнее"
                        BodyText="Это стандартная версия теста Люшера. Она может более точно оценить настроение, чем альтернативная."/>

                </StackLayout>

                <StackLayout 
                IsVisible="{Binding IsFinish}">

                    <StackLayout Margin="10, 0, 10, 0">

                        <CollectionView
                            SelectionMode="None"
                            VerticalScrollBarVisibility="Never"
                            ItemsSource="{Binding ResultItems}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:ResultItem">
                                    <StackLayout Margin="15, 15, 15, 10">
                                        <Label LineBreakMode="WordWrap">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span 
                                                        FontSize="16"
                                                        Text="{Binding PropertyName}"
                                                        TextColor="#DE000000"
                                                        FontFamily="RobotoSemiBold"/>
                                                    <Span
                                                        FontSize="16"
                                                        Text=": "
                                                        TextColor="#DE000000"
                                                        FontFamily="RobotoMedium"/>

                                                    <Span
                                                        FontSize="16"
                                                        Text="{Binding PropertyValue}"
                                                        TextColor="#DE000000"
                                                        FontFamily="RobotoSemiBold"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label
                                            Margin="0, 10, 0, 0"
                                            Text="{Binding PropertyText}"
                                            TextColor="#DE000000"
                                            HorizontalTextAlignment="Justify"
                                            FontSize="14"/>

                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Button 
                            Margin="10, 20, 10, 15"
                            Text="Заново"
                            FontSize="15"
                            BackgroundColor="{StaticResource Gray}"
                            CornerRadius="25"
                            WidthRequest="300"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Command="{Binding Restart}"
                            HeightRequest="40"/>
                            
                    </StackLayout>

                </StackLayout>



            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>