<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MobileHelperMaui.Views.ProfilePages.UserPage"
             xmlns:templates="clr-namespace:PsychologyApp.Presentation.Templates"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:vm="clr-namespace:MobileHelper.ViewModels.ProfileViewModels"
             xmlns:technique="clr-namespace:PsychologyApp.Presentation.Technique"
             xmlns:quots="clr-namespace:PsychologyApp.Presentation.Modules.Profile"
             x:DataType="vm:UserViewModel"
             Title="Профиль">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Параметры" Command="{Binding OpenOptionsCommand}"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout 
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand">

        <StackLayout 
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All"
            Margin="0, 15, 0, 15">

            <StackLayout
                Margin="25, 0, 25, 0"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">

                <Label
                    Margin="0, 0, 10, 0"
                    VerticalOptions="CenterAndExpand"
                    FontSize="16"
                    Text="{mi:Material Icon=KeyboardArrowLeft, IconSize=25}"
                    TextColor="{StaticResource Primary}">

                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>

                </Label>

                <StackLayout 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Orientation="Horizontal">

                    <Label
                        VerticalOptions="CenterAndExpand"
                        Text="{mi:Material Icon=AccountCircle, IconSize=35}"
                        Margin="15, 0, 0, 0"
                        TextColor="#AAAAAA"/>

                    <StackLayout 
                        VerticalOptions="CenterAndExpand"
                        Margin="5, 0, 10, 0">
                        <Label 
                            TextColor="#DE000000"
                            FontFamily="RobotoMedium"
                            FontSize="14"
                            Text="Пользователь"/>

                        <Label 
                            Text="Стандартный"
                            Padding="0"
                            Margin="0"
                            FontFamily="RobotoRegular"
                            TextColor="#DE000000"
                            FontSize="14"/>

                    </StackLayout>

                </StackLayout>

                <StackLayout
                    HorizontalOptions="EndAndExpand">

                    <Label
                        Text="Параметры"
                        Margin="10, 0, 0, 0"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="EndAndExpand"
                        FontFamily="RobotoMedium"
                        TextColor="{StaticResource Primary}"
                        FontSize="14">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenOptionsCommand}"/>
                        </Label.GestureRecognizers>

                    </Label>

                </StackLayout>
                
            </StackLayout>

            <StackLayout 
            Margin="0, 25, 15, 20"
            HorizontalOptions="Center"
            Orientation="Horizontal">
                <StackLayout Margin="15, 10, 15, 10">
                    <Label 
                    TextColor="#DE000000"
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="{Binding TechniquesCompletedCount}"/>
                    <Label 
                    Text="Пройдено техник"
                    FontSize="16"
                    TextColor="#DE000000"/>

                </StackLayout>

                <StackLayout Margin="15, 10, 15, 10">
                    <Label 
                    TextColor="#DE000000"
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="0"/>
                    <Label 
                    Text="Подписчиков"
                    FontSize="16"
                    TextColor="#DE000000"/>

                </StackLayout>

            </StackLayout>

            <StackLayout Margin="0, 10, 0, 5">
                <Label 
                        Margin="15, 0, 15, 5"
                        Text="Советуем пройти"
                        FontSize="16"
                        FontFamily="RobotoMedium"
                        TextColor="#DE000000"
                        HorizontalOptions="Start"/>

                <CollectionView 
                        Margin="15, 0, 0, 0"
                        VerticalOptions="CenterAndExpand"
                        HorizontalScrollBarVisibility="Never"
                        ItemsSource="{Binding Techniques}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="technique:TechniqueItem">
                            <StackLayout>
                                <Frame
                                    HasShadow="True"
                                        Padding="10"
                                        WidthRequest="250">

                                    <StackLayout Margin="10, 5, 5, 5">
                                        <Label 
                                            Text="{Binding Title}"
                                            TextColor="#DE000000"
                                            FontFamily="RobotoMedium"
                                            FontSize="15"/>

                                        <Label
                                            HorizontalTextAlignment="Justify"
                                            Text="{Binding Subtitle}"
                                            FontFamily="RobotoRegular"
                                            TextColor="#DE000000"
                                            FontSize="14"/>

                                    </StackLayout>

                                </Frame>
                            </StackLayout>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
            </StackLayout>

            <StackLayout Margin="0, 5, 0, 5">
                <Label 
                        Margin="15, 0, 15, 5"
                        Text="Лучшие цитаты"
                        TextColor="#DE000000"
                        FontFamily="RobotoMedium"
                        FontSize="16"/>

                <templates:ProgressbarView
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Margin="15, 75, 15, 0"
                        IsVisible="{Binding IsInit}"
                        IsLoading="True"
                        ProgressText="Поиск цитат">
                    <templates:ProgressbarView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Cancel}"/>
                    </templates:ProgressbarView.GestureRecognizers>
                </templates:ProgressbarView>

                <CollectionView
                        IsVisible="{Binding IsDone}"
                        Margin="15, 0, 15, 0"
                        SelectionMode="None"
                        VerticalScrollBarVisibility="Never"
                        ItemsSource="{Binding Quots}">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="quots:Quots">
                            <StackLayout>
                                <Frame HasShadow="True" Padding="10">

                                    <StackLayout Margin="10, 5, 15, 10">
                                        <Label 
                                            Text="{Binding Author}"
                                            TextColor="#DE000000"
                                            FontFamily="RobotoMedium"
                                            FontSize="15"/>

                                        <Label
                                            HorizontalTextAlignment="Justify"
                                            Text="{Binding Text}"
                                            FontFamily="RobotoRegular"
                                            TextColor="#DE000000"
                                            FontSize="14"/>

                                    </StackLayout>

                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <StackLayout
                            HorizontalOptions="FillAndExpand">

                            <templates:ProgressbarView
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Margin="15, 75, 15, 0"
                                IsLoading="True"
                                ProgressText="Поиск цитат">
                                <templates:ProgressbarView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Cancel}"/>
                                </templates:ProgressbarView.GestureRecognizers>
                            </templates:ProgressbarView>

                        </StackLayout>

                    </CollectionView.EmptyView>

                </CollectionView>

            </StackLayout>

        </StackLayout>
    </AbsoluteLayout>
</ContentPage>